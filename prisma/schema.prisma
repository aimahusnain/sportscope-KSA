generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model FacilityType {
  id         String     @id @default(auto()) @map("_id") @db.ObjectId
  name       String     @unique
  sports     Sport[]    @relation(fields: [], references: [])
  facilities Facility[] // Added relation to facilities
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}

model Sport {
  id             String       @id @default(auto()) @map("_id") @db.ObjectId
  name           String       @unique
  facilityTypeId String       @db.ObjectId
  facilityType   FacilityType @relation(fields: [facilityTypeId], references: [id])
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}

model Facility {
  id             String       @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  facilityTypeId String       @db.ObjectId
  facilityType   FacilityType @relation(fields: [facilityTypeId], references: [id])
  region         KSARegion
  country        String
  fullAddress    String
  rating         Float?       // Optional rating
  reviewsNumber  Int?         // Optional reviews count
  detailedUrl    String?      // Optional detailed URL
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}

enum KSARegion {
  RIYADH
  MAKKAH
  MADINAH
  EASTERN_PROVINCE
  ASIR
  TABUK
  QASSIM
  HAIL
  NORTHERN_BORDERS
  JAZAN
  NAJRAN
  AL_BAHAH
  AL_JOUF
}